header 
  background-color white

.header__top
  padding 25px 0
  border-bottom 1px solid lightGrayColor
  .container
    overflow hidden

.header__contacts 
  float left    

.header__social
  float right
  li
    display inline-block
    margin-right 15px
    &:last-child
      margin-right 0

.header-social__link--fb
  display block
  sprite($s-fb)

.header-social__link--tw
  display block
  sprite($s-tw) 

.header-social__link--google
  display block
  sprite($s-google) 

.header-social__link--instagram
  display block
  sprite($s-instagram)  

.header__mail
  margin-right 20px
  &:before
    content ''
    display inline-block
    margin-right 10px
    sprite($s-mail) 

.header__phone
  &:before
    content ''
    display inline-block
    margin-right 10px
    sprite($s-header_phone)  

.header__bottom 
  padding 40px 0
  border-bottom 1px solid lightGrayColor
  
.header-nav__list
  li
    display inline-block
    margin-right 40px
    &:last-child
      margin-right 0
  a
    display block
    width 100%
    height 100%
    font-size 1.143rem
    &.active,
    &:hover
      color orangeColor
.header__logo,
.header-nav
  display inline-block  

.header__logo
  margin-right 80px  

.header-nav
  vertical-align middle

.header-search__form
  display none

.header-action
  width 100%
  max-width 130px
  float right
  text-align right
  margin-top 10px

.header-search,
.header-user,
.header-basket
  display inline-block
  vertical-align middle
  margin-right 25px

.header-basket
  margin-right 0
  position relative

.header-basket__number
  position absolute
  top -20px
  left 3px
  background blueColor
  color #fff
  font-size .714rem
  display block
  width 18px
  height 18px
  border-radius 50%
  text-align center
  padding-top 4px

.header-search__icon
  sprite($s-header_search)
  display block
  cursor pointer
.header-user__icon
  sprite($s-header_user)
  display block
  cursor pointer
.header-basket__icon
  sprite($s-header_busket)
  display block
  cursor pointer






